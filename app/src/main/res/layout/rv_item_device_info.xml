<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDeviceInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivDeviceInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_oval_gradient_image_bg"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_other_devices" />

    <TextView
        android:id="@+id/tvDeviceInfoName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/SubtitleTheme"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDeviceInfo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Huawei Mobile" />

    <TextView
        android:id="@+id/tvDeviceInfoAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DescriptionTheme"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvDeviceInfoName"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceInfoName"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="17:77:33:99" />

</androidx.constraintlayout.widget.ConstraintLayout>