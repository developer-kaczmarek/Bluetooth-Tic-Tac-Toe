<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vMarkButtonBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rect_choose_button_bg"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMarkButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:src="@drawable/ic_cross"
        app:layout_constraintBottom_toTopOf="@id/tvMarkButton"
        app:layout_constraintEnd_toEndOf="@id/vMarkButtonBackground"
        app:layout_constraintStart_toStartOf="@id/vMarkButtonBackground"
        app:layout_constraintTop_toTopOf="@id/vMarkButtonBackground"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvMarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:minWidth="100dp"
        android:text="Ведущий"
        android:textAlignment="center"
        android:textAppearance="@style/DescriptionTheme"
        app:layout_constraintBottom_toBottomOf="@id/vMarkButtonBackground"
        app:layout_constraintEnd_toEndOf="@id/vMarkButtonBackground"
        app:layout_constraintStart_toStartOf="@id/vMarkButtonBackground"
        app:layout_constraintTop_toBottomOf="@id/ivMarkButton"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>